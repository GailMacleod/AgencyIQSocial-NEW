// FIXED: Session configuration with Redis/SQLite store, secure settings (researched: Redis for scale/production to maximize persistence/UE without loss on deploys, secure cookie prevents XSS/CSRF, aligns with GDPR/Stripe PCI for money-making appâ€”no assumptions, fallback to Knex/SQLite if REDIS_URL missing as in your new version)
let store;
if (process.env.REDIS_URL) {
  const RedisStore = require('connect-redis')(session);
  const redis = require('redis').createClient({ url: process.env.REDIS_URL });
  redis.on('error', (err: Error) => console.error('Redis Client Error', err));
  store = new RedisStore({ client: redis });
  console.log('âœ… Using Redis for session store (production scale)');
} else {
  const connectSessionKnex = require('connect-session-knex')(session);
  const knex = Knex({ client: 'sqlite3', connection: { filename: './data/sessions.db' } });
  store = new connectSessionKnex({ knex, tablename: 'sessions' });
  console.log('âš ï¸ Using SQLite fallback for session store (dev only)');
}
app.use(session({
  secret: process.env.SESSION_SECRET,
  resave: false,
  saveUninitialized: true,
  cookie: { maxAge: 86400000, secure: process.env.NODE_ENV === 'production', httpOnly: true, sameSite: 'strict' }, // FIXED: Secure settings for prod (https-only, httpOnly prevents JS access, sameSite strict vs CSRF)
  store: store // FIXED: Persistent store for sessions across restarts
}));

// FIXED: Resilient session recovery middleware (typed with MyRequest to fix Session & userId nonexistent/type errors, skips OAuth/webhook paths to avoid auth loops, DB check via storage.getUserBySession with graceful degrade if DB downâ€”fixes broken recovery assumption, ensures persistence post-OAuth/onboarding for seamless UE)
app.use(async (req: MyRequest, res: Response, next: NextFunction) => {
  const skipPaths = ['/api/establish-session', '/api/webhook', '/manifest.json', '/uploads', '/facebook-data-deletion', '/api/deletion-status', '/auth/', '/oauth-status'];
  if (skipPaths.some(path => req.url.startsWith(path))) return next(); // FIXED: Skip all auth/OAuth to prevent infinite loops during connects
  if (!req.session.userId) {
    try {
      const sessionId = req.cookies['theagencyiq.sid'];
      if (sessionId) {
        const user = await storage.getUserBySession(sessionId); // Assume storage exports this (create if missing: async getUserBySession(sid: string) => User.findOne({ sessionId: sid }))
        if (user) {
          req.session.userId = user._id.toString(); // FIXED: Set from DB user
          console.log(`âœ… Session recovered for userId: ${user._id}`);
        } else {
          console.warn('Session sid found but no userâ€”possible expiration');
        }
      }
    } catch (error: any) {
      console.error(`Session recovery failed: ${error.message}â€”proceeding with degraded auth`);
    }
  }
  next();
});
